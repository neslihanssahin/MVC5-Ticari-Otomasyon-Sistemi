@using MvcOnlineTİcariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Cari Yönetimi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="#">İşlemler</a></li>
        <li class="breadcrumb-item active">Cariler</li>
    </ol>
</div>



<table class="table table-striped" style="margin-top:20px;">
    <tr>
        <th>Cari ID </th>
        <th>Cari Ad </th>
        <th>Cari Soyad </th>
        <th>Cari Şehir </th>
        <th>Cari Mail </th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CariID</td>
            <td>@item.CariAd</td>
            <td>@item.CariSoyad</td>
            <td>@item.CariSehir</td>
            <td>@item.CariMail</td>
            <td>
                <a class="btn btn-success btn-sm" href="/Cari/CariGuncelle/@item.CariID">
                    <i class="fas fa-pencil-alt"></i> Güncelle
                </a>
            </td>
            <td>
                <a class="btn btn-danger btn-sm" href="/Cari/CariSil/@item.CariID">
                    <i class="fas fa-trash"></i> Sil
                </a>
            </td>
            <td>
                <a class="btn btn-warning btn-sm" href="/Cari/MusteriSatis/@item.CariID" style="color: white;">
                    <i class="fas fa-info-circle"></i>
                    Satış Geçmişi
                </a>
            </td>

        </tr>
    }
</table>

<a class="btn btn-primary" href="/Cari/CariEkle">Yeni Cari Ekle</a>